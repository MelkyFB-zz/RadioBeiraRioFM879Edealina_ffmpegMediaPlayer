<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.pubarteprime.radiobeirariofm879edealina.MediaPlayerActivity"
    tools:showIn="@layout/activity_media_player">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txvMusica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:singleLine="true"
            android:padding="5dip"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:text="Não Disponível..............................................................................................................."
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <Button
            android:id="@+id/btn_site"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:drawableLeft="@android:drawable/ic_menu_send"
            android:background="#2E7D32"
            android:layout_margin="5dp"
            android:paddingLeft="5px"
            android:text="Enviar Pedido pelo Site" />

        <Button
            android:id="@+id/btn_whatsapp"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/ic_whatsapp"
            android:background="#2E7D32"
            android:layout_margin="5dp"
            android:paddingLeft="5px"
            android:text="Enviar Pedido pelo Whatsapp" />

        <Button
            android:id="@+id/btn_whatsappgroup"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/ic_whatsapp"
            android:background="#2E7D32"
            android:layout_margin="5dp"
            android:paddingLeft="5px"
            android:text="Acessar Grupo da Rádio no Whatsapp" />

        <Button
            android:id="@+id/btn_sms"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:drawableLeft="@android:drawable/ic_dialog_email"
            android:background="#2E7D32"
            android:layout_margin="5dp"
            android:paddingLeft="5px"
            android:text="Enviar SMS para Celular da Rádio" />

        <Button
            android:id="@+id/btn_ligar"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:drawableLeft="@android:drawable/ic_menu_call"
            android:background="#2E7D32"
            android:layout_margin="5dp"
            android:paddingLeft="5px"
            android:text="Ligar para Rádio" />


        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner">
        </com.google.android.gms.ads.AdView>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
